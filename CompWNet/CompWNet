# Mostly just a testing zone roight now, will eventually have to good stuff

import os
os.environ["TF_CPP_MIN_LOG_LEVEL"] = "2"

import tensorflow as tf
from tensorflow import keras as ks
from keras import layers
from keras.datasets import mnist

(x_train, y_train), (x_test, y_test) = mnist.load_data()
x_train = x_train.reshape(-1, 28, 28, 1).astype("float32") / 255.0
x_test = x_test.reshape(-1, 28, 28, 1).astype("float32") / 255.0

print("Initialized, data loaded. \n\n")
print("Test shape:", x_test.shape)
print("Train shape:", x_train.shape)

class CNN_Block(layers.Layer):
    def __init__(self, out_channels, kernel_size=(3, 3)):
        super(CNN_Block, self).__init__()
        self.con = layers.Conv2D(out_channels, kernel_size, padding='same')
        self.batch = layers.BatchNormalization()

    def call(self, input_tensor, training=False):
        x = self.con(input_tensor)
        print(x.shape)
        x = self.batch(x, training=training)
        x = tf.nn.relu(x)
        return x

model = ks.Sequential([
    layers.Flatten(),
    layers.Dense(128), 
    layers.Dense(10),
    ])

model.compile(
    optimizer=ks.optimizers.Adam(), 
    loss=ks.losses.SparseCategoricalCrossentropy(from_logits=True), 
    metrics=['accuracy']
    )

model.fit(x_train, y_train, batch_size=64, epochs=1)
model.evaluate(x_test, y_test, batch_size=64)


